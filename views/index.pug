extends layout

block content
  section.section.section-bg
    .container.is-fluid
      iframe(data-id='createformation.com_980x250_billboard_responsive_DFP' frameborder='0' scrolling='no' marginheight='0' marginwidth='0' topmargin='0' leftmargin='0' width='1' height='1')
      script.
        (function () {
        var size='970x250|300x250',
        adunit = 'createformation.com_980x250_billboard_responsive_DFP',
        xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function(){if (xmlhttp.readyState == 4 && xmlhttp.status == 200){var es = document.querySelectorAll("[data-id='"+adunit+"']");var e = Array.from(es).find(function(e) {return !e.hasAttribute("data-rendered")});if(e){var iframe = e.contentWindow.document;iframe.open();iframe.write(xmlhttp.responseText);iframe.close();e.setAttribute('data-rendered', true)}}};xmlhttp.open("GET", 'https://pubads.g.doubleclick.net/gampad/adx?iu=/147246189/'+adunit+'&sz='+encodeURI(size)+'&t=Placement_type%3Dserving&'+Date.now(), true);xmlhttp.send();})();
      .columns
        .column.is-half
          .columns.is-mobile
            .column.is-half.image.example-img
              img(src='/images/formation-example.png', alt='squad formation example')
            .column.is-half.image.example-img
              img(src='/images/barcelona.png', alt='barcelona formation 2018') 
        .column.has-text-centered
          .tile.is-ancestor
            .tile.is-vertical
              .tile.is-parent
                article.tile.is-child.notification
                  h1.title.is-2.is-spaced Create your own Football Formation
                  h2.subtitle.is-5 Choose your favorite players to form your squad
              .tile.is-flex-mobile 
                .tile.is-parent
                  article.tile.is-child.notification.tile-bg
                    p.title Build
                    p.subtitle your team's starting eleven
                    figure.image
                      img(src='/images/blank-formation.png', alt='blank formation')
                .tile.is-parent
                  article.tile.is-child.notification.tile-bg
                    p.title Photos
                    p.subtitle of all football players
                    figure.image
                      img(src='/images/messi.png', alt='player photo of messi')
                .tile.is-parent.is-hidden-mobile
                  article.tile.is-child.notification.tile-bg
                    p.title Free
                    p.subtitle to use and share your squad
                    figure.image
                      img(src='/images/checked.png', alt='check lineup')
              .tile.is-parent
                article.tile.is-child.notification
                  a.button.main-button.is-large.is-primary(href='/create') Create Formation
  section.section.section-bg
    .container.is-fluid
      .columns
        .column.has-text-centered
          .tile.is-ancestor
            .tile.is-vertical
              .tile.is-parent
                article.tile.is-child.notification
                  h1.title.is-2.is-spaced The only formation creator with photos of all players
                  h2.subtitle.is-5 Download your squad and share it with your friends
              .tile.is-parent
                article.tile.is-child.notification
                  ul
                    li Easily create your own football team in our soccer tactics and formations tool.
                    li Use it to show what is your current favourite lineup or who you want to play on the next match.
              .tile.is-parent
                article.tile.is-child.notification
                  a.button.main-button.is-large.is-primary(href='/create') Create Formation
        .column.is-half
          .columns.is-mobile
            .column.is-half.image.example-img
              img(src='/images/france-lineup-mundial-2018.png', alt='France lineup world cup 2018')
            .column.is-half.image.example-img
              img(src='/images/england-lineup-mundial-2018.png', alt='England lineup world cup 2018') 
  section.section.section-bg
    .container.is-fluid
      .columns
        .column.is-one-quarter
              img(src='/images/legends2.png', alt='football legends lineup formation 2') 
        .column.has-text-centered
          .tile.is-ancestor
            .tile.is-vertical
              .tile.is-parent
                article.tile.is-child.notification
                  h1.title.is-2.is-spaced Legend players added 
                  h2.subtitle.is-5 A database containing 18,000+ current players and 100+ legends
              .tile.is-parent
                article.tile.is-child.notification
                  ul
                    li Top players of all time available now.
                    li Create a Hall of Fame lineup with Pele, Maradona, Ronaldo, Zidane and more.
              .tile.is-parent
                article.tile.is-child.notification
                  a.button.main-button.is-large.is-primary(href='/create') Create Formation
        .column.is-one-quarter
              img(src='/images/legends1.png', alt='football legends lineup formation 1')